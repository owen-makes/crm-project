<div class="mt-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">ðŸ“Š Portafolios</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @client.portfolios.each do |portfolio| %>
        <div class="bg-white p-4 shadow-lg rounded-xl border border-gray-200">
          <h3 class="text-lg font-bold text-gray-800"><%= portfolio.name %></h3>
          <p class="text-gray-500 text-sm"><%= portfolio.broker %>: <%= portfolio.account_number %></p>
          <div class="mt-3">
            <p class="text-gray-600">Activos: <%= portfolio.holdings.count %></p>
            <p class="text-gray-600">Valor Total: <%= number_to_currency(portfolio.total_value.to_i) %></p>
          </div>
          <div class="mt-4 flex justify-between">
            <%= link_to "Ver", client_portfolio_path(@client, portfolio), class: "text-green-600 hover:underline text-sm" %>
            <%= link_to "Eliminar", client_portfolio_path(@client, portfolio), data: { turbo_method: :delete, turbo_confirm: "Eliminar este portafolio?" }, class: "text-red-500 hover:text-red-700 text-sm" %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @client.portfolios.empty? %>
      <%= link_to new_client_portfolio_path(@client) do %>
        <div class="flex-col h-max justify-items-center content-between border-slate-200 border-4 rounded-xl border-dotted p-4">
          <div class="text-9xl text-slate-200 font-bold text-center mt-4 mb-0">+</div>
          <div class="text-2xl text-slate-200 font-bold text-center mb-4 mt-0">Agregar un portafolio</div>
        </div>
      <% end %>
    <% end %>
  </div>