<div class="mt-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">ðŸ“Š Portafolios</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @client.portfolios.each do |portfolio| %>
        <div class="bg-white p-4 shadow-lg rounded-xl border border-gray-200">
          <h3 class="text-lg font-bold text-gray-800"><%= portfolio.broker %></h3>
          <p class="text-gray-500 text-sm">Cuenta: <%= portfolio.account_number %></p>
          <div class="mt-3">
            <p class="text-gray-600">Activos: <%= portfolio.holdings.count %></p>
            <p class="text-gray-600">Valor Total: <%= "placeholder" %></p>
          </div>
          <div class="mt-4 flex justify-between">
            <%= link_to "Ver", client_portfolio_path(@client, portfolio), class: "text-green-600 hover:underline text-sm" %>
            <%= link_to "Eliminar", client_portfolio_path(@client, portfolio), data: { turbo_method: :delete, turbo_confirm: "Eliminar este portafolio?" }, class: "text-red-500 hover:text-red-700 text-sm" %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @client.portfolios.empty? %>
      <p class="text-gray-500 text-center mt-4">No hay portafolios registrados.</p>
    <% end %>
  </div>