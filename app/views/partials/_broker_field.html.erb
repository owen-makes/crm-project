<div class="field">
  <%= form.label :broker, "Broker", class: "block text-sm font-medium text-gray-700 mb-2" %>
  <%= form.text_field :broker, list: "brokers", placeholder: "Select or type a broker", class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none transition" %>
  <datalist id="brokers">
    <% BROKERS.each do |broker| %>
      <option value="<%= broker %>"></option>
    <% end %>
  </datalist>
</div>
