<%= render "partials/tabbar" %>
<div class="col-span-6 p-6 bg-white shadow-lg rounded-xl">
  <div class="flex mb-6">
    <h1 class="text-2xl font-bold">Mis Clientes</h1>
    <div class="ml-auto flex gap-2">
      <%= render AddbuttonComponent.new(link: new_client_path) %>
      <%= render "partials/import_export_buttons" %>
    </div>
  </div>
  <% if @clients.blank? %>
      <div data-controller="share-link"
      class="absolute inset-0 flex items-center justify-center pointer-events-none">

    <div class="relative bg-white rounded-xl p-6 w-96 space-y-4 shadow-lg pointer-events-auto">
      <h2 class="text-lg font-bold">Todavía no tenes clientes :(</h2>
      <p class="text-medium text-gray-900">Compartí este link para ingresar nuevos prospectos, o hace click en <b class="font-bold">Importar</b> para agregar clientes desde un .CSV</p>

      <div class="flex gap-2">
        <input type="text"
              readonly
              value="localhost:3000/signup/<%= current_user.form_token %>"
              class="flex-1 border rounded px-2 py-1 text-sm"
              data-share-link-target="textbox"
              data-action="click->share-link#copy">
        <button class="px-3 py-1 rounded bg-green-600 text-white"
                data-action="share-link#copy">
          Copiar
        </button>
      </div>

    </div>
  </div>
  <% else %>
    <div class="overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <div class="overflow-hidden md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">Nombre</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Teléfono</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">Email</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">Broker</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">Asesor</th>


                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @clients.each do |client| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden md:table-cell"><%= link_to client.name + " " + client.last_name, client, class: "hover:underline" %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= client.phone %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden lg:table-cell"><%= client.email %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= client.broker %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= client.user ? "#{client.user.full_name}" : "" %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
                    <div class="flex space-x-2">
                      <%= link_to "Contact", client, class: "text-blue-500 hover:text-blue-700" %>
                      <%= link_to "Edit", edit_client_path(client), class: "text-green-500 hover:text-green-700" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>