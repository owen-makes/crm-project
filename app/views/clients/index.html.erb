<%= render "partials/sidebar" %>
<div class="col-span-5 lg:col-span-4 xl:col-span-5 p-6 bg-white shadow-lg rounded-xl">
  <div class="flex">
    <div class="ml-auto">Mi link es <%= current_user.form_token %></div>
  </div>
  <h1 class="text-2xl font-bold mb-4">Mis Clientes</h1>
  <% if @clients.blank? %>
    <div class="flex-col bg-green-950 bg-blur-sm shadow-lg rounded-lg p-5 w-96 h-100 m-auto text-white">
      <h2 class="text-4xl font-bold my-4 mx-4">Todavía no tenes Clientes!</h1>
      <p class="my-4 mx-4">Compartí tu link para ingresar nuevos prospectos</p>
      <div class="bg-slate-50 rounded-md my-4 mx-4 text-black text-center">localhost:3000/signup/<%= current_user.form_token %></div>
    </div>
  <% else %>
    <div class="overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <div class="overflow-hidden md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">Nombre</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Teléfono</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">Email</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">Broker</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">Detalles</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">Notas</th>


                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @clients.each do |client| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden md:table-cell"><%= client.name %> <%= client.last_name %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= client.phone %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden lg:table-cell"><%= client.email %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= client.broker %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= truncate(client.goals, length: 50) %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= truncate(client.notes, length: 50) %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
                    <div class="flex space-x-2">
                      <%= link_to "Contact", client, class: "text-blue-500 hover:text-blue-700" %>
                      <%= link_to "Edit", edit_client_path(client), class: "text-green-500 hover:text-green-700" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>