<!-- Tab Bar -->
<%= render "partials/tabbar" %>

<!-- New Client Form -->
<div class="col-span-4 lg:col-span-6 p-6 bg-white shadow-lg rounded-xl">
  <div class="flex justify-between items-center">
    <%= link_to "Volver a Clientes", clients_path, class: "text-green-600 hover:underline text-sm" %>
  </div>
  
  <h1 class="text-2xl font-bold text-gray-800 mt-4 mb-6">Crear Nuevo Cliente</h1>
  
  <%= form_with(model: @client, local: true, class: "space-y-6") do |form| %>
    <% if @client.errors.any? %>
      <div class="p-4 bg-red-50 text-red-600 rounded-lg mb-6">
        <h2 class="font-semibold"><%= pluralize(@client.errors.count, "error") %> impidieron guardar este cliente:</h2>
        <ul class="list-disc pl-5 mt-2">
          <% @client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <!-- Personal Information Section -->
    <div class="p-6 bg-gray-100 rounded-xl shadow">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Informaci√≥n Personal</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :name, "Nombre", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, class: "w-full border-gray-300 rounded-md text-sm focus:ring-green-500 focus:border-green-500" %>
        </div>
        
        <div>
          <%= form.label :last_name, "Apellido", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :last_name, class: "w-full border-gray-300 rounded-md text-sm focus:ring-green-500 focus:border-green-500" %>
        </div>
        
        <div>
          <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :email, class: "w-full border-gray-300 rounded-md text-sm focus:ring-green-500 focus:border-green-500" %>
        </div>
        
        <div>
          <%= form.label :phone, "Tel√©fono", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.telephone_field :phone, class: "w-full border-gray-300 rounded-md text-sm focus:ring-green-500 focus:border-green-500" %>
        </div>
      </div>
    </div>
    
    <!-- Business Information Section -->
    <div class="p-6 bg-gray-100 rounded-xl shadow">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Informaci√≥n Adicional</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :channel, "Canal", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :channel,
                ["Referido", "Web", "Redes Sociales", "Publicidad", "Otro"],
                { include_blank: "Seleccionar canal" },
                class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none transition h-10" %>

        </div>
        
        <div>
          <%= render "partials/broker_field", form: form %>
        </div>
      </div>
    </div>
    
    <!-- Goals and Notes Section -->
    <div class="p-6 bg-gray-100 rounded-xl shadow">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Objetivos y Notas</h2>
      
      <div class="space-y-4">
        <div>
          <%= form.label :goals, "üéØ Objetivos", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :goals, rows: 3, class: "w-full border-gray-300 rounded-md text-sm focus:ring-green-500 focus:border-green-500" %>
        </div>
        
        <div>
          <%= form.label :notes, "üìù Notas", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :notes, rows: 3, class: "w-full border-gray-300 rounded-md text-sm focus:ring-green-500 focus:border-green-500" %>
        </div>
      </div>
    </div>
    
    <!-- Submit Button -->
    <div class="flex justify-end">
      <%= form.submit "Crear Cliente", class: "px-6 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
</div>