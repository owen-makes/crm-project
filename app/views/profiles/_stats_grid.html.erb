  <%# Stats Grid %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 p-6">
    <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
      <div class="text-sm font-medium text-gray-500">Total Leads</div>
      <div class="mt-1 text-3xl font-semibold text-green-600">
        <%= @user.leads.count %>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
      <div class="text-sm font-medium text-gray-500">Active Leads</div>
      <div class="mt-1 text-3xl font-semibold text-green-600">
        <%= @user.leads.where(status: 'wip').count %>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
      <div class="text-sm font-medium text-gray-500">Converted Leads</div>
      <div class="mt-1 text-3xl font-semibold text-green-600">
        <%= @user.leads.where(status: 'convertido').count %>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
      <div class="text-sm font-medium text-gray-500">Total Clients</div>
      <div class="mt-1 text-3xl font-semibold text-green-600">
        <%= @user.clients.count %>
      </div>
    </div>
  </div>