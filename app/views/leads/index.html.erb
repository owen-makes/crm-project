<%= render "partials/sidebar" %>
<div class="col-span-5 lg:col-span-4 xl:col-span-5 p-6 bg-white shadow-lg rounded-xl">
  <div class="flex">
    <div class="ml-auto"><%= link_to "Importar", new_csv_import_path %></div>
  </div>
  <h1 class="text-2xl font-bold mb-4">Mis Leads</h1>
  <% if @leads.blank? %>
    <div class="flex-col bg-green-950 bg-blur-sm shadow-lg rounded-lg p-5 w-96 h-100 m-auto text-white">
      <h2 class="text-4xl font-bold my-4 mx-4">Todavía no tenes leads!</h1>
      <p class="my-4 mx-4">Compartí tu link para ingresar nuevos prospectos</p>
      <div class="bg-slate-50 rounded-md my-4 mx-4 text-black text-center">localhost:3000/signup/<%= current_user.form_token %></div>
    </div>
  <% else %>
    <div class="overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <div class="overflow-hidden md:rounded-lg">
         <div class="flex gap-2 mb-4">
            <%= link_to "Todos", leads_path, class: "px-4 py-2 rounded #{'bg-green-500 text-white' unless params[:status].present?}" %>
            <%= link_to "Activos", leads_path(status: 'active'), class: "px-4 py-2 rounded #{'bg-green-500 text-white' if params[:status] == 'active'}" %>
            <%= link_to "Convertidos", leads_path(status: 'converted'), class: "px-4 py-2 rounded #{'bg-green-500 text-white' if params[:status] == 'converted'}" %>
            <%= link_to "Bajas", leads_path(status: 'lost'), class: "px-4 py-2 rounded #{'bg-green-500 text-white' if params[:status] == 'lost'}" %>
          </div>
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">Nombre</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Teléfono</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">Email</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">Asesor</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">Broker</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Capital</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">Detalles</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @leads.each do |lead| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden md:table-cell"><%= link_to lead.name + " " + lead.last_name, lead, class: "hover:underline" %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= lead.phone %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden lg:table-cell"><%= lead.email %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= lead.user.name + " " + lead.user.last_name %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= lead.broker %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= lead.capital %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= truncate(lead.description, length: 50) %></td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge(lead.status) %>">
                      <%= lead.status %>
                    </span>
                  </td>
                  <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
                    <div class="flex space-x-2">
                      <%= link_to "Editar", edit_lead_path(lead), class: "text-gray-500 hover:text-gray-700" %>
                      <%= button_to 'Convertir a Cliente', convert_lead_path(lead), method: :post, data: { confirm: 'Are you sure you want to convert this lead to a client?' }, class: "text-green-500 hover:text-green-700" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>