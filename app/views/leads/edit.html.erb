  <!-- Sidebar -->
  <%= render "partials/sidebar" %>

  <!-- Edit Lead Form -->
  <div class="col-span-5 lg:col-span-4 xl:col-span-5 p-6 bg-white shadow-lg rounded-lg">
    <%= link_to "Volver a perfil", lead_path(@lead), class: "text-sky-600 hover:underline text-sm" %>

    <h1 class="text-3xl font-bold text-gray-800 mt-4">
      Edit Lead: <%= @lead.name %> <%= @lead.last_name %>
    </h1>

    <%= form_with(model: @lead, local: true, class: "mt-6 space-y-4") do |f| %>
      <div>
        <%= f.label :name, "First Name", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
        <%= f.telephone_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :channel, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :channel, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :broker, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :broker, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :capital, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :capital, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :status, ["Open", "In Progress", "Closed"], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :notes, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :notes, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="flex items-center justify-between mt-6">
        <%= f.submit "Update Lead", class: "bg-sky-600 text-white py-2 px-4 rounded-md hover:bg-sky-700 focus:ring-2 focus:ring-offset-2 focus:ring-sky-500" %>
        <%= link_to "Cancel", lead_path(@lead), class: "text-gray-600 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>