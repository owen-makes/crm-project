<%# app/views/leads/_leads_table.html.erb %>
<div class="inline-block min-w-full align-middle">
  <div class="overflow-hidden md:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <!-- Sortable headers with explicit table references -->
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">
            <%= sort_link_to 'Nombre', :name, request.params %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link_to 'Teléfono', :phone, request.params %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">
            <%= sort_link_to 'Email', :email, request.params %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">
            <%= sort_link_to 'Asesor', :user_id, request.params %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">
            <%= sort_link_to 'Broker', :broker, request.params %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link_to 'Capital', :capital, request.params %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">Detalles</th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link_to 'Estado', :status, request.params %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link_to 'Fecha', :created_at, request.params %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% leads.each do |lead| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden md:table-cell"><%= link_to lead.name + " " + lead.last_name, lead, class: "hover:underline" %></td>
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= lead.phone %></td>
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden lg:table-cell"><%= lead.email %></td>
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= lead.user ? "#{lead.user.full_name}" : "" %></td>
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= lead.broker %></td>
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900"><%= lead.capital %></td>
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900 hidden xl:table-cell"><%= truncate(lead.description, length: 50) %></td>
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge(lead.status) %>">
                <%= lead.status %>
              </span>
            </td>
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
              <%= l(lead.created_at, format: :short) %>
            </td>
            <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-900">
              <div class="flex space-x-2">
                <%= link_to "Editar", edit_lead_path(lead), class: "text-gray-500 hover:text-gray-700" %>
                <%= button_to 'Convertir', convert_lead_path(lead), method: :post, data: { confirm: '¿Está seguro que desea convertir este lead a cliente?' }, class: "text-green-500 hover:text-green-700" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <!-- Pagination -->
    <% if leads.respond_to?(:total_pages) %>
      <div class="px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
        <div class="flex-1 flex justify-between sm:hidden">
          <%= link_to_prev_page leads, 'Anterior', class: 'relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50' %>
          <%= link_to_next_page leads, 'Siguiente', class: 'ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50' %>
        </div>
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700">
              Mostrando <span class="font-medium"><%= leads.offset_value + 1 %></span> a <span class="font-medium"><%= leads.offset_value + leads.length %></span> de <span class="font-medium"><%= leads.total_count %></span> leads
            </p>
          </div>
          <div>
            <%= paginate leads %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>